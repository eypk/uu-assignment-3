<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <nav>
        <div id="nav_logo">
          <h2>MovieTickets.com</h2>
        </div>
        <label for="drop" class="toggle">
          <img
            id="toggle_img"
            src="/assets/menu-burger.png"
            alt="Header menu"
            width="24px"
          />
        </label>
        <input type="checkbox" id="drop" />
        <ul class="menu" id="header-menu">
          <li><a href="/">Home</a></li>
          <% if (user?.username) { %>
          <li><a href="/user"><%= user?.username %></a></li>
          <li><a href="/" id="nav-logout-button">Logout</a></li>
          <% } else { %>
          <li><a href="/login" id="nav-login-button">Login</a></li>
          <% } %>
        </ul>
      </nav>
    </header>
    <h2>User Info</h2>
    <section id="user-info">
      <img src="/assets/user-icon.webp" alt="user photo" width="300" />

      <table>
        <tr>
          <th>User Info</th>
          <th></th>
        </tr>
        <tr>
          <td>Name</td>
          <td><%= user?.name %></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= user?.email %></td>
        </tr>
        <tr>
          <td>Username</td>
          <td><%= user?.username %></td>
        </tr>
        <tr>
          <td>Address</td>
          <td><%= user?.address %></td>
        </tr>
        <tr>
          <td>Password</td>
          <td><%= user?.password %></td>
        </tr>
        <tr>
          <td>Credit Card</td>
          <td><%= user?.credit_card %></td>
        </tr>
      </table>
    </section>

    <script>
      const logoutButton = document.getElementById("logout-button");

      const handleLogout = () => {
        if (confirm("Are you sure you want to log out?")) {
          fetch("http://localhost:3001/api/logout", {
            method: "GET",
            mode: "no-cors",
            headers: {
              "Content-Type": "application/json;charset=UTF-8",
            },
          })
            .then((response) => {
              console.log("User logged out!");
              if (response.ok) {
                fetch("http://localhost:3001/");
                location.href = "/";
              }
            })
            // .then(() => (window.location.href = "/"))
            .catch((error) => console.error(error));
        }
      };

      logoutButton.addEventListener("click", handleLogout);
    </script>
  </body>
</html>
