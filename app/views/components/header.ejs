<header>
  <nav>
    <div id="nav_logo">
      <h2>MovieTickets.com</h2>
    </div>
    <label for="drop" class="toggle">
      <img
        id="toggle_img"
        src="assets/menu-burger.png"
        alt="Header menu"
        width="24px"
      />
    </label>
    <input type="checkbox" id="drop" />
    <ul class="menu" id="header-menu">
      <li><a href="<%=host%>/">Home</a></li>
      <% if (user.username) { %>
      <li><a href="<%=host%>/user"><%= user.username %></a></li>
      <li><a href="<%=host%>/api/logout" id="logout-button">Logout</a></li>
      <% } else { %>
      <li><a href="<%=host%>/login" id="login-button">Login</a></li>
      <% } %>
    </ul>
  </nav>
</header>
